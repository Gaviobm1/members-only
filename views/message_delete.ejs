<html lang="en">
  <%- include("./partials/header.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %> <% if (user.is_admin) { %>

    <p>Are you sure you want to delete <%= message.title %></p>
    <form method="POST">
      <input type="hidden" name="delete_message" value="<%= message._id %>" />
      <button>Delete</button>
